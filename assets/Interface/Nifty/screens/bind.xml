<!--
Nifty XML to lay out the screen for the hotkey bindings editor.
-->
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="bind" controller="jme3utilities.nifty.bind.BindScreen">
        <layer childLayout="vertical"
               backgroundColor="#444f">
            <panel/>
            <panel childLayout="horizontal"
                   backgroundColor="#aaaf"
                   height="25px">
                <control name="label" id="modeStatus"
                         color="#000f"
                         textHAlign="center"
                         width="*"/>
            </panel>
            <panel childLayout="horizontal"
                   backgroundColor="#aaaf"
                   height="400px"
                   padding="3px">

                <panel childLayout="vertical">
                    <panel childLayout="horizontal">
                        <control name="label"
                                 text="Hotkeys:"
                                 color="#000f"
                                 textHAlign="center"
                                 width="*"/>
                    </panel>
                    <panel childLayout="horizontal">
                        <control name="listBox" id="hotkeyList"
                                 displayItems="15"
                                 horizontal="optional"/>
                    </panel>
                </panel>

                <panel childLayout="vertical"
                       padding="3px"
                       width="60px">
                    <panel/>
                    <control name="button" id="bindButton"
                             height="60px">
                        <interact onRelease="perform(bind)"/>
                    </control>
                    <panel/>
                </panel>

                <panel childLayout="vertical">
                    <panel childLayout="horizontal">
                        <control name="label"
                                 text="Actions:"
                                 color="#000f"
                                 textHAlign="center"
                                 width="*"/>
                    </panel>
                    <panel childLayout="horizontal">
                        <control name="listBox" id="actionList"
                                 displayItems="15"
                                 horizontal="optional"/>
                    </panel>
                </panel>

            </panel>
            <panel childLayout="horizontal"
                   backgroundColor="#aaaf"
                   height="40px"
                   padding="10px">
                <panel/>
                <control name="button" id="unbindButton"
                         width="140px">
                    <interact onRelease="perform(unbind)"/>
                </control>
                <panel/>
                <control name="button" id="loadConfig"
                         width="93px">
                    <interact onRelease="perform(load)"/>
                </control>
                <panel/>
                <control name="button" id="saveConfig"
                         width="82px">
                    <interact onRelease="perform(save)"/>
                </control>
                <panel/>
                <control name="button" id="returnButton"
                         width="40%">
                    <interact onRelease="perform(return)"/>
                </control>
                <panel/>
            </panel>
            <panel childLayout="horizontal"
                   backgroundColor="#aaaf"
                   height="25px">
                <control name="label" id="configStatus"
                         color="#000f"
                         textHAlign="center"
                         width="*"/>
            </panel>
            <panel/>
        </layer>
    </screen>
</nifty>